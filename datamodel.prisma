type User {
  id: ID! @unique
  email: String! @unique
  status: String! @default(value: "")
  loginSecret: String @default(value: "")
  friends: [User!]!
  chats: [Chat!]!
  messages: [Message!]!
}

type Chat {
  id: ID! @unique
  users: [User!]!
  messages: [Message!]!
}

type Message {
  id: ID! @unique
  text: String!
  user: User!
  read: Boolean! @default(value: "false")
}
