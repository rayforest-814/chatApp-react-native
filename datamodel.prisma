type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  status: String! @default(value: "")
  username: String!
  password: String!
  friends: [User!]!
}

type Chat {
  id: ID! @unique
  users: [User!]!
  messages: [Message!]!
}

type Message {
  id: ID! @unique
  text: String!
  user: User!
  read: Boolean! @default(value: "false")
}
